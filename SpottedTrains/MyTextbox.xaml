<UserControl x:Class="SpottedTrains.MyTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpottedTrains"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <DockPanel x:Name="dpMain" LastChildFill="True">
            <Label>My text box:</Label>
            <TextBox x:Name="TheTextBox" Width="100" Height="20" />
            <Label x:Name="lblErrorMessage" DockPanel.Dock="Right" Margin="0" Width="auto" Height="auto"  />
        </DockPanel>

    </Grid>
</UserControl>
